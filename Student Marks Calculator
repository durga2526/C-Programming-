#include <stdio.h>
struct Student {
    char name[50];
    int m[5];
};
int main() {
    struct Student s;
    int i, total = 0;
    float avg;
    char grade;
    printf("Enter name: ");
    scanf("%s", s.name);
    printf("Enter 5 marks: ");
    for(i = 0; i < 5; i++) {
        scanf("%d", &s.m[i]);
        total += s.m[i];
    }
    avg = total / 5.0;
    if(avg >= 90) grade='A';
    else if(avg >= 80) grade='B';
    else if(avg >= 70) grade='C';
    else if(avg >= 60) grade='D';
    else grade='F';
    printf("\nName: %s\nTotal: %d\nAverage: %.2f\nGrade: %c\n", s.name, total, avg, grade);
    return 0;
}
