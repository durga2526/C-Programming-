#include <stdio.h>
struct Student {
char name[50];
int m1, m2, m3, m4, m5;
int total;
float average;
char grade;
};
int main() {
struct Student s;

// Input
printf("Enter student name: ");
scanf("%s", s.name);
printf("Enter marks for 5 subjects: ");
scanf("%d%d%d%d%d", &s.m1, &s.m2, &s.m3, &s.m4, &s.m5);

// Calculate total and average
s.total = s.m1 + s.m2 + s.m3 + s.m4 + s.m5;
s.average = s.total / 5.0;

// Grade
if(s.average >= 90) s.grade = 'A';
else if(s.average >= 80) s.grade = 'B';
else if(s.average >= 70) s.grade = 'C';
else if(s.average >= 60) s.grade = 'D';
else s.grade = 'F';

// Output
printf("\n--- Student Report ---\n");
printf("Name: %s\n", s.name);
printf("Total: %d\n", s.total);
printf("Average: %.2f\n", s.average);
printf("Grade: %c\n", s.grade);
return 0;
}
